<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/GreenLight">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/TextColor"
                android:textSize="24sp"
                android:text="새 식물 추가하기"
                android:textStyle="bold"
                android:letterSpacing="-0.04"
                android:layout_weight="2"
                android:gravity="left"
                />
            <TextView
                android:id="@+id/addPlant_cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/GreenDark"
                android:textSize="18sp"
                android:text="취소"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="right"

                />
        </LinearLayout>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/circular_profile"
            />

        <!-- input form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/White"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/GreenDark"
                android:letterSpacing="-0.04"
                android:layout_weight="1"
                android:gravity="left"
                android:text="이름"/>

            <EditText
                android:id="@+id/addPlant_nameInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="이름을 입력하세요."
                android:gravity="right"
                android:padding="0dp"
                android:textColorHint="@color/TextColorGray"
                android:textSize="14sp"
                android:textColor="@color/TextColor"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LightGray"><!-- divider --></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/White"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/GreenDark"
                android:letterSpacing="-0.04"
                android:layout_weight="1"
                android:gravity="left"
                android:text="학명"/>

            <EditText
                android:id="@+id/addPlant_bNameInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="학명을 입력하세요."
                android:gravity="right"
                android:padding="0dp"
                android:textColorHint="@color/TextColorGray"
                android:textSize="14sp"
                android:textColor="@color/TextColor"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LightGray"><!-- divider --></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/White"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/GreenDark"
                android:letterSpacing="-0.04"
                android:layout_weight="1"
                android:gravity="left"
                android:text="평균 물 주기"/>

            <EditText
                android:id="@+id/addPlant_averageDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:hint="평균 물 주기를 입력하세요."
                android:padding="0dp"
                android:textColor="@color/TextColor"
                android:textColorHint="@color/TextColorGray"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LightGray"><!-- divider --></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/White"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/GreenDark"
                android:letterSpacing="-0.04"
                android:layout_weight="1"
                android:gravity="left"
                android:text="데려온 날"/>

            <EditText
                android:id="@+id/addPlant_firstDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="ex) 2018.01.01"
                android:gravity="right"
                android:padding="0dp"
                android:textColorHint="@color/TextColorGray"
                android:textSize="14sp"
                android:inputType="date"
                android:textColor="@color/TextColor"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LightGray"><!-- divider --></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/White"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/GreenDark"
                android:letterSpacing="-0.04"
                android:layout_weight="1"
                android:gravity="left"
                android:text="마지막으로 물 준 날"/>

            <EditText
                android:id="@+id/addPlant_lastWaterDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="ex) 2018.01.01"
                android:gravity="right"
                android:padding="0dp"
                android:textColorHint="@color/TextColorGray"
                android:textSize="14sp"
                android:inputType="date"
                android:textColor="@color/TextColor"/>
        </LinearLayout>
        <!-- input form end -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/TextColor"
            android:textStyle="bold"
            android:letterSpacing="-0.05"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="16dp"
            android:text="기록할 메모들을 라벨로 설정해 주세요."/>
        <com.nex3z.flowlayout.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.yklee.myapplication.TagView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tagName = "물준 날"
                app:closeButton="false"/>

            <com.yklee.myapplication.TagView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tagName = "사진"
                app:closeButton="false" />
            <com.yklee.myapplication.TagView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tagName = "사진"
                app:closeButton="false" />
            <com.yklee.myapplication.TagView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tagName = "사진"
                app:closeButton="false" />
            <com.yklee.myapplication.TagView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tagName = "사진"
                app:closeButton="false" />
            <com.yklee.myapplication.TagView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tagName = "사진"
                app:closeButton="false" />
            <com.yklee.myapplication.TagView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tagName = "사진"
                app:closeButton="false" />
            <com.yklee.myapplication.TagView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tagName = "사진"
                app:closeButton="false" />

        </com.nex3z.flowlayout.FlowLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addPlant_FAB"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="84dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/Green"
        app:borderWidth="0dp"
        android:elevation="6dp"/>


</android.support.constraint.ConstraintLayout>